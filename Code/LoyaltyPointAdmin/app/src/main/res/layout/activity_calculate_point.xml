<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/DarkPrimaryColor"
    tools:context="com.thesis.dont.loyaltypointadmin.controllers.CalculatePointActivity">

    <ImageView
        android:id="@+id/userAvatarImgView"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp" />

    <TextView
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/userAvatarImgView"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/userAvatarImgView"
        android:layout_alignBottom="@id/userAvatarImgView"/>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/totalMoneyFloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userAvatarImgView"
        float:fletTextAppearance="@style/FloatLabeledEditTextStyle"
        float:fletPadding="@dimen/activity_flet_padding">

        <EditText
            android:id="@+id/totalMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_70sdp"
            android:singleLine="true"
            android:hint="@string/total"
            android:textStyle="normal"
            android:textColor="@color/TextIcons"
            android:backgroundTint="@color/TextIcons"
            android:textColorHint="@color/TextIcons"
            android:drawableLeft="@drawable/money_ic"
            android:drawablePadding="@dimen/_10sdp"
            android:textSize="@dimen/font_size"/>
        />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <TextView
        android:id="@+id/vnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VND"
        android:textColor="@color/TextIcons"
        android:layout_alignBottom="@id/totalMoney"
        android:layout_toRightOf="@id/totalMoney"/>

    <TextView
        android:id="@+id/totalMoneyPoint"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="0"/>

    // EVENTS

    <TextView
        android:id="@+id/events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalMoney"
        android:text="EVENTS"/>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="CANCEL"
            android:background="@color/MaterialGrey"
            materialdesign:rippleSpeed="70"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/font_size"/>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/registerBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="CONFIRM"
            android:background="@color/AccentColor"
            materialdesign:rippleSpeed="70"
            android:textColor="@color/White"
            android:textSize="@dimen/font_size"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnLayout"></ListView>

</RelativeLayout>
