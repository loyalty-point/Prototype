<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/MaterialBackground"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".RegisterActivity"
    android:id="@+id/rootLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLayout"
        android:layout_alignParentBottom="true">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:background="@color/MaterialGrey"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/font_size"/>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/registerBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Register"
            android:background="@color/AccentColor"
            android:textColor="@color/White"
            android:textSize="@dimen/font_size"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/infoLayout"
        android:layout_above="@id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/confirmPasswordIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_password"
            android:layout_alignBottom="@+id/confirmPasswordFloat"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/confirmPasswordFloat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/confirmPasswordIcon"
            android:layout_centerInParent="true"
            float:fletPadding="10dp">

            <EditText
                android:id="@+id/confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="@integer/password_maxLength"
                android:hint="@string/confirmpassword"
                android:singleLine="true"
                android:password="true"
                android:textStyle="italic"
                android:textSize="@dimen/font_size"/>
            />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <ImageView
            android:id="@+id/passwordIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_password"
            android:layout_above="@+id/confirmPasswordFloat"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/passwordFloat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:layout_alignBottom="@+id/passwordIcon"
            android:layout_toRightOf="@id/passwordIcon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="@integer/password_maxLength"
                android:hint="@string/password"
                android:singleLine="true"
                android:password="true"
                android:textStyle="italic"
                android:textSize="@dimen/font_size"/>
            />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <ImageView
            android:id="@+id/usernameIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_user"
            android:layout_above="@+id/passwordFloat"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/usernameFloat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:layout_alignBottom="@+id/usernameIcon"
            android:layout_toRightOf="@id/usernameIcon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="@integer/user_name_maxLength"
                android:hint="@string/username"
                android:singleLine="true"
                android:textStyle="italic"
                android:textSize="@dimen/font_size"/>
            />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <ImageView
            android:id="@+id/fullnameIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fullname"
            android:layout_alignBottom="@+id/fullnameFloat"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/fullnameFloat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:layout_below="@+id/confirmPasswordFloat"
            android:layout_toRightOf="@+id/fullnameIcon"
            android:layout_toEndOf="@+id/fullnameIcon">

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="@integer/fullname_maxLength"
                android:hint="@string/fullname"
                android:singleLine="true"
                android:textStyle="italic"
                android:textSize="@dimen/font_size"/>
            />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <ImageView
            android:id="@+id/phoneIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_call"
            android:layout_alignBottom="@+id/phoneFloat"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/phoneFloat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:layout_below="@+id/fullnameFloat"
            android:layout_toRightOf="@+id/phoneIcon"
            android:layout_toEndOf="@+id/phoneIcon">

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="@integer/phone_maxLength"
                android:hint="@string/phonenumber"
                android:singleLine="true"
                android:phoneNumber="true"
                android:textStyle="italic"
                android:textSize="@dimen/font_size"/>
            />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    </RelativeLayout>



</RelativeLayout>
