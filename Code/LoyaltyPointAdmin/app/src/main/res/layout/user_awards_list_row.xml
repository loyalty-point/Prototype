<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/awardImage"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_10sdp" />

    <TextView
        android:id="@+id/awardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/awardImage"
        android:layout_toRightOf="@id/awardImage"
        android:textColor="@color/MaterialDarkRed"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/awardPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/awardName"
        android:layout_toRightOf="@id/awardImage" />

    <TextView
        android:id="@+id/awardQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/awardPoint"
        android:layout_toRightOf="@id/awardImage" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/awardSellBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/AccentColor"
        android:text="SELL"
        android:textColor="@color/TextIcons" />
</RelativeLayout>