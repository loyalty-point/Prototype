<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background">

    <github.chenupt.springindicator.SpringIndicator
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:siTextSize="18sp"
        app:siTextColor="@color/DarkPrimaryColor"
        app:siSelectedTextColor="@color/TextIcons"
        app:siIndicatorColor="@color/PrimaryColor"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/listCardsIndicator"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listCardsPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        android:layout_below="@id/listCardsIndicator"/>

    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/createShopBtn"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        materialdesign:iconDrawable="@drawable/ic_action_new"
        android:background="@color/AccentColor"
        app:cb_color="#99CC00"
        materialdesign:animate="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>

</RelativeLayout>



