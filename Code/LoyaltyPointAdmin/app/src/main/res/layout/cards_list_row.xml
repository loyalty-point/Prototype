<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ebm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding">


    <com.thesis.dont.loyaltypointadmin.views.MyRoundedImageView
        android:id="@+id/cardImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_alignParentRight="true"
        app:siRadius="@dimen/_6sdp"
        app:siBorderWidth="@dimen/_3sdp"
        app:siBorderColor="@color/MaterialGrey"/>

    <ImageButton
        android:id="@+id/contextMenuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/dots_vertical"
        android:background="@color/DarkPrimaryColorBlur"/>

    <!--<at.markushi.ui.CircleButton
        android:id="@+id/contextMenuBtn"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/dots_vertical"
        app:cb_color="@color/PrimaryColor"
        app:cb_pressedRingWidth="8dip" />-->

    <RelativeLayout
        android:id="@+id/shopInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/cardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TextIcons"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:padding="@dimen/_3sdp"
            android:background="@color/DarkPrimaryColorBlur"/>

        </RelativeLayout>

</RelativeLayout>

