<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thesis.dont.loyaltypointadmin.controllers.UpdatePointDetailActivity">

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_weight="0.5"
            android:background="@color/MaterialRed"
            android:text="BACK"
            android:textSize="@dimen/font_size"
            materialdesign:rippleSpeed="70" />


        <com.gc.materialdesign.views.ButtonRectangle
            android:visibility="gone"
            android:id="@+id/acceptBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.5"
            android:background="@color/MaterialGreen"
            android:text="ACCEPT"
            android:textSize="@dimen/font_size"
            materialdesign:rippleSpeed="70" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:visibility="gone"
            android:id="@+id/addPointBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.5"
            android:background="@color/MaterialGreen"
            android:text="ADD POINT"
            android:textSize="@dimen/font_size"
            materialdesign:rippleSpeed="70" />

    </LinearLayout>


    <ImageView
        android:id="@+id/userImage"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/userName"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/userImage"
        android:layout_below="@id/date"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/userPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_toRightOf="@id/userImage"
        android:textSize="@dimen/font_size" />

    <TextView
        android:id="@+id/userAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userPhone"
        android:layout_toRightOf="@id/userImage"
        android:textSize="@dimen/font_size" />

    <TextView
        android:id="@+id/identityNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userImage"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/identityNumber"
        android:textSize="@dimen/font_size" />


</RelativeLayout>
