<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thesis.dont.loyaltypointadmin.controllers.CreateShopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLayout"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/createBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Create"
            android:background="@color/LightGrey"
            android:textColor="@color/White"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/infoLayout"
        android:layout_above="@id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/shopLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/LightGrey"/>

        <EditText
            android:id="@+id/shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/shopLogo"
            android:layout_toRightOf="@id/shopLogo"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:hint="shop name"
            android:textStyle="italic"
            android:singleLine="true"
            android:focusable="true"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/shopLogo"
            android:layout_toRightOf="@id/shopLogo"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:hint="phone number"
            android:textStyle="italic"
            android:singleLine="true"
            android:phoneNumber="true" />

        <TextView
            android:id="@+id/categoryTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopLogo"
            android:layout_marginTop="32dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Category"/>

        <Spinner
            android:id="@+id/shopcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/categoryTextview"
            android:layout_toLeftOf="@id/categoryTextview"
            android:layout_alignLeft="@id/phone"
            android:layout_marginRight="16dp"
            android:background="@drawable/the_border">
        </Spinner>

        <EditText
            android:id="@+id/exchangeRatio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopcategory"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:hint="exchange ratio"
            android:textStyle="italic"
            android:singleLine="true"
            android:phoneNumber="true" />

        <EditText
            android:id="@+id/shopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/exchangeRatio"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:hint="shop address"
            android:textStyle="italic"
            android:singleLine="true"
            android:focusable="true"/>

        <CheckBox
            android:id="@+id/agreeTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopAddress"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="I agree to the term of use"/>



    </RelativeLayout>

</RelativeLayout>
