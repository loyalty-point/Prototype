<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ebm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding">


    <com.thesis.dont.loyaltypointuser.views.MyRoundedImageView
        android:id="@+id/cardImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginLeft="@dimen/_35sdp"
        android:layout_alignParentRight="true"
        app:siRadius="@dimen/_6sdp"
        app:siBorderColor="@color/MaterialGrey"/>

    <ImageButton
        android:id="@+id/contextMenuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/dots_vertical"
        android:background="@color/DarkPrimaryColorBlur"/>

    <TextView
        android:id="@+id/shopPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/DarkPrimaryColorBlur"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/TextIcons"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"/>

    <!--<at.markushi.ui.CircleButton
        android:id="@+id/contextMenuBtn"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/dots_vertical"
        app:cb_color="@color/PrimaryColor"
        app:cb_pressedRingWidth="8dip" />-->

    <RelativeLayout
        android:id="@+id/shopInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/shopLogo"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/ic_store"
            app:siRadius="@dimen/_3sdp"
            app:siBorderWidth="@dimen/_2sdp"
            app:siBorderColor="@color/MaterialGrey"/>

        <TextView
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopLogo"
            android:textColor="@color/TextIcons"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:padding="@dimen/_3sdp"
            android:background="@color/DarkPrimaryColorBlur"/>

        <TextView
            android:id="@+id/shopAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopName"
            android:background="@color/DarkPrimaryColorBlur"
            android:textColor="@color/TextIcons"
            android:textStyle="bold"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_8sdp"/>

    </RelativeLayout>

</RelativeLayout>

