<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cardImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_178sdp"/>

    <ImageView
        android:id="@+id/shopLogo"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignBottom="@id/cardImg"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/DarkPrimaryColor"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@id/shopLogo"
        android:background="@color/DarkPrimaryColorBlur"/>

    <TextView
        android:id="@+id/shopAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shopLogo"
        android:layout_alignBottom="@id/shopLogo"
        android:layout_marginLeft="@dimen/_5sdp"
        android:background="@color/DarkPrimaryColorBlur"
        android:textColor="@color/TextIcons"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/font_size"/>

    <TextView
        android:id="@+id/shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shopLogo"
        android:layout_above="@id/shopAddress"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/TextIcons"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:padding="@dimen/_5sdp"
        android:background="@color/DarkPrimaryColorBlur"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopPoint"
        android:background="@color/DarkPrimaryColorBlur"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textColor="@color/TextIcons"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/cardImg"/>

    <RelativeLayout
        android:id="@+id/contextMenuLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/DarkPrimaryColor">

        <ImageButton
            android:id="@+id/contextMenuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dots_vertical"/>

    </RelativeLayout>

</RelativeLayout>

