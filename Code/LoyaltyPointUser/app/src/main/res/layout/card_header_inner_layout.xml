<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/shopLogo"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/ic_store"
        app:siRadius="@dimen/_3sdp"
        app:siBorderWidth="@dimen/_2sdp"
        app:siBorderColor="@color/DarkPrimaryColor"/>

    <TextView
        android:id="@+id/shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shopLogo"
        android:layout_alignTop="@id/shopLogo"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textColor="@color/DarkPrimaryColor"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/shopAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shopLogo"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_below="@id/shopName"
        android:textColor="@color/PrimaryColor"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_3sdp"
        android:textSize="@dimen/_8sdp"/>

</RelativeLayout>