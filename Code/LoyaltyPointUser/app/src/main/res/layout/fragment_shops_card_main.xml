<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background">

    <TextView
        android:id="@+id/listCardsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        android:textStyle="bold"
        android:textColor="@color/AccentColor"
        android:text="MY CARDS"/>

    <TextView
        android:id="@+id/listRegistersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        android:textStyle="bold"
        android:layout_toRightOf="@id/listCardsText"
        android:textColor="@color/MaterialGrey"
        android:text="MY REGISTERS"/>

    <github.chenupt.springindicator.SpringIndicator
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:siTextSize="18sp"
        app:siTextColor="@color/DarkPrimaryColor"
        app:siSelectedTextColor="@color/TextIcons"
        app:siIndicatorColor="@color/PrimaryColor"
        android:id="@+id/listCardsIndicator"
        android:layout_below="@id/listCardsText"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listCardsPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        android:layout_below="@id/listCardsIndicator"/>

    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/createShopBtn"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        materialdesign:iconDrawable="@drawable/ic_action_new"
        android:background="@color/AccentColor"
        app:cb_color="#99CC00"
        materialdesign:animate="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>

