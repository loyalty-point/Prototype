<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thesis.dont.loyaltypointuser.controllers.UpdatePointDetailActivity">

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/printBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_weight="0.5"
            android:background="@color/MaterialGrey"
            android:text="BACK"
            android:textSize="@dimen/font_size"
            materialdesign:rippleSpeed="70" />


        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/deleteBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.5"
            android:background="@color/AccentColor"
            android:text="PRINT"
            android:textSize="@dimen/font_size"
            materialdesign:rippleSpeed="70" />

    </LinearLayout>

    <TextView
        android:id="@+id/totalPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnLayout"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/awardImage"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@id/date"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/awardName"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/awardImage"
        android:textColor="@color/DarkPrimaryColor"
        android:layout_below="@id/date"
        android:textSize="@dimen/_15sdp"
        />

    <TextView
        android:id="@+id/awardCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/awardName"
        android:layout_toRightOf="@id/awardImage"
        android:textColor="@color/PrimaryColor"
        android:textSize="@dimen/font_size" />

    <TextView
        android:id="@+id/awardDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/awardCode"
        android:layout_toRightOf="@id/awardImage"
        android:textSize="@dimen/font_size" />

    <TextView
        android:id="@+id/shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/awardImage"
        android:textColor="@color/DarkPrimaryColor"
        android:textSize="@dimen/_15sdp"
         />

    <TextView
        android:id="@+id/shopAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopName"
        android:textColor="@color/PrimaryColor"
        android:textSize="@dimen/font_size" />

    <TextView
        android:id="@+id/buyDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopAddress"
        android:textSize="@dimen/font_size" />

</RelativeLayout>
